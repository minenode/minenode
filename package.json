  "license": "AGPL-3.0-only",
  "node": ">=16.0.0",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@napi-rs/cli": "^2.10.1",
    "@swc-node/jest": "^1.5.2",
    "@types/jest": "^28.1.5",
    "@types/js-yaml": "^4.0.5",
    "@types/long": "^4.0.2",
    "@types/node": "^18.0.3",
    "@types/node-7z": "^2.1.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-marine": "^9.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-license-header": "^0.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@swc-node/register": "^1.5.1",
    "7zip-bin": "^5.2.0",
    "chalk": "4",
    "eventemitter3": "^4.0.7",
    "js-yaml": "^4.1.0",
    "minecraft-data": "^3.46.2",
    "nbt": "^0.8.1",
    "node-7z": "^3.0.0",
    "superstruct": "^0.16.0",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "prepare": "is-ci || husky install",
    "prestart": "run-p build:rs:debug",
    "start": "node -r @swc-node/register ./src/app.ts",
    "debug": "cross-env MINENODE_DEBUG=1 RUST_BACKTRACE=1 nodemon -w ./src -w ./crate --exec 'npm start' --ext ts,rs",
    "build:ts": "tsc",
    "build:rs:debug": "napi build --js false native",
    "build:rs:release": "napi build --js false --release native",
    "build:debug": "run-p build:ts build:rs:debug",
    "build:release": "run-p build:ts build:rs:release",
    "lint": "eslint --ext ts src test",
    "lint:fix": "eslint --fix --ext ts src test",
    "pretest": "run-s build:rs:debug",
    "test:ts": "tsc --noEmit",
    "test:jest": "jest",
    "test:rs": "cargo test",
    "test": "run-p test:ts test:jest test:rs"
  }
}
